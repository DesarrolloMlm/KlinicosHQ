@model IEnumerable<EstablecimientoPanelDeControl.ViewModels.ProfesionalViewModel>

@{
    ViewBag.Title = "Profesionales :: Listado";
}


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    <table class="table table-striped table-bordered table-hover dataTable" width="100%">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.documento)</th>
                                <th>@Html.DisplayNameFor(model => model.apeYNom)</th>
                                
                                <th>@Html.DisplayNameFor(model => model.contactoObservaciones)</th>
                                <th>@Html.DisplayNameFor(model => model.email)</th>
                                <th>@Html.DisplayNameFor(model => model.matricula)</th>
                                <th>@Html.DisplayNameFor(model => model.especialidades)</th>
                                
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.documento)</td>
                                    <td>@Html.DisplayFor(modelItem => item.apeYNom)</td>
                                    
                                    <td>@Html.DisplayFor(modelItem => item.contactoObservaciones)</td>
                                    <td>@Html.DisplayFor(modelItem => item.email)</td>
                                    <td>@Html.DisplayFor(modelItem => item.matricula)</td>
                                    <td>@Html.DisplayFor(modelItem => item.especialidades)</td>
                                    
                                    @*<td>
                                        <div class="btn-group pull-right">
                                            <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
                                                <i class="fa fa-wrench"></i> <span class="caret" style="border-top-color:#fff;"></span>
                                            </button>
                                            <ul class="dropdown-menu pull-right" role="menu">
                                                
                                            </ul>
                                        </div>
                                    </td>*@
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section Styles {
    @Styles.Render("~/Content/dataTables/dataTablesStyles")
}
@section Scripts {
    @Scripts.Render("~/plugins/dataTables")
    <script type="text/javascript">
        $(document).ready(function () {
            $('.dataTable').DataTable({
                "responsive": true,
                "pageLength": 25,
                "language": {
                    "sLengthMenu": "Mostrar _MENU_ profesionales por página",
                    "sZeroRecords": "No se encontraron profesionales",
                    "sEmptyTable": "Ningún profesional disponible",
                    "sInfo": "Mostrando del _START_ al _END_ de un total de _TOTAL_ profesionales",
                    "sInfoEmpty": "Mostrando del 0 al 0 de un total de 0 profesionales",
                    "sInfoFiltered": "(filtrado de un total de _MAX_ profesionales)",
                    "url": "@Url.Content("~/Scripts/i18next/Spanish.json")"
                },
                dom: '<"html5buttons"B>lrTfgitp',
                buttons: [
                    { extend: 'excel', title: 'ExampleFile' },
                ],
                "columnDefs": [
                    { targets: 0, responsivePriority: 1, orderable: false },
                    { targets: 1, responsivePriority: 2 },
                    { targets: 9, responsivePriority: 3, orderable: false, searchable: false },
                ]
            });
        });
    </script>
}






